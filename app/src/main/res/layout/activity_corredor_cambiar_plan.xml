<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.entrenador.CorredorCambiarPlan">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="PLAN ACTUAL: "
            />
        <TextView
            android:id="@+id/tituloPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_below="@+id/titulo"
            android:text="NOMBRE PLAN ACTUAL: "
            />
        <ListView
            android:id="@+id/listaTotalPlanes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="200dp"
            android:layout_below="@+id/tituloPlanTotal">
        </ListView>

        <Button
            android:id="@+id/btnCambiarPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar Plan" />
    </LinearLayout>

</RelativeLayout>