<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewPremium">

    <EditText
        android:id="@+id/tituloBeneficios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="Beneficios"
        />
    <TableLayout
        android:id="@+id/tabla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloBeneficios"
        android:padding="5dp">
        <TableRow>
            <Button
                android:id="@+id/btnDoctores"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Deportologia"
                />
        </TableRow>
        <TableRow>
        <Button
            android:id="@+id/btnYoga"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Yoga"
            />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btnNutricion"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="NutriciÃ³n"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btnMasaje"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Masaje"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btnCalzado"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Calzado"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btnIndumentaria"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Indumentaria"
                />
        </TableRow>
    </TableLayout>

</RelativeLayout>