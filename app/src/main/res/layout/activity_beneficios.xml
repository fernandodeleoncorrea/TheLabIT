<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Beneficios">

    <EditText
        android:id="@+id/beneficios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="Beneficios"
        />
    <TableLayout
        android:id="@+id/tabla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beneficios"
        android:padding="5dp">
        <TableRow>
            <Button
                android:id="@+id/btnDetallePlan"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:text="Detalle Plan"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btnEditarCorredor"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Editar Perfil"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btnBuscarEntrenador"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Entrenadores"
                />
        </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btnMasaje"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Masaje"
            />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnCalzado"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Calzado"
            />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnIndumentaria"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Indumentaria"
            />
    </TableRow>
    </TableLayout>
</RelativeLayout>